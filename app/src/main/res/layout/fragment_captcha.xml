<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pozadina"
    tools:context="com.example.teodora.videoklub.fragments.CaptchaFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/kepca_img"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp" />

        <EditText
            android:id="@+id/kepcaKorisnika"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@android:color/holo_orange_light"
            android:textStyle="bold" />

        <Button
            android:id="@+id/potvrdi_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="45dp"
            android:background="@drawable/moje_dugme"
            android:backgroundTint="@color/colorAccent"
            android:text="potvrdi"
            android:textStyle="bold" />


    </LinearLayout>
</FrameLayout>
